<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:descendantFocusability="blocksDescendants"

        android:id="@+id/relativeLayout">



    <ImageView
        android:id="@+id/acImage"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_account_circle" />

    <TextView
        android:id="@+id/acName"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
        android:layout_toRightOf="@+id/acImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/acDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acName"
            android:layout_marginLeft="113dp"
            android:layout_marginStart="113dp"
            android:layout_toEndOf="@+id/acImage"
            android:layout_toRightOf="@+id/acImage" />
    </RelativeLayout>

        <LinearLayout


            android:id="@+id/opCart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_action_name" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="CART"
                android:textAlignment="center"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/opAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_action_name_home" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ADDRESS"
                android:textAlignment="center"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/opAdd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:descendantFocusability="blocksDescendants"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_addpro" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ADD PRODUCT"
                android:textAlignment="center"
                android:textSize="30dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/opOrders"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:descendantFocusability="blocksDescendants"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageVie"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_orders" />

            <TextView
                android:id="@+id/textVi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ORDERS"
                android:textAlignment="center"
                android:textSize="30dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>